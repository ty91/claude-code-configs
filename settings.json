{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(tree:*)",
      "Bash(cat:*)",
      "Bash(pnpm init)",
      "Bash(pnpm run test:*)",
      "Bash(pnpm run lint)",
      "Bash(kubectl get:*)",
      "Bash(kubectl logs:*)",
      "WebSearch",
      "WebFetch",
      "mcp__plugin_context7_context7__*",
      "Bash(pnpm add:*)",
      "Bash(curl:*)",
      "Bash(pnpm tsc:*)",
      "Bash(git log:*)",
      "Bash(pnpm codegen:*)",
      "Bash(pnpm test:run:*)",
      "Bash(pnpm lint:*)",
      "Bash(pnpm build:*)",
      "Bash(xargs cat:*)",
      "Bash(mkdir:*)",
      "Bash(find:*)",
      "Bash(pnpm test)",
      "Bash(grep:*)",
      "mcp__plugin_context7_context7__resolve-library-id",
      "mcp__plugin_context7_context7__query-docs",
      "Bash(pnpm typecheck:*)"
    ],
    "deny": [],
    "ask": [],
    "defaultMode": "default"
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/format.sh"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "code-simplifier@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true,
    "context7@claude-plugins-official": true,
    "swift-lsp@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true,
  "language": "Korean",
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline-command.sh"
  }
}
