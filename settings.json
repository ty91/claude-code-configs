{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(tree:*)",
      "Bash(cat:*)",
      "Bash(pnpm init)",
      "Bash(pnpm run test:*)",
      "Bash(pnpm run lint)",
      "Bash(kubectl get:*)",
      "Bash(kubectl logs:*)",
      "WebSearch",
      "WebFetch"
    ]
  },
  "alwaysThinkingEnabled": true,
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/format.sh"
          }
        ]
      }
    ]
  }
}
